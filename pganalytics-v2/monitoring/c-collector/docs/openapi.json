{
  "openapi": "3.0.3",
  "info": {
    "title": "PG Analytics Collector API",
    "description": "API para coleta de métricas PostgreSQL em tempo real",
    "version": "1.0.0",
    "contact": {
      "name": "PG Analytics Team",
      "email": "admin@pganalytics.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Servidor local de desenvolvimento"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Root endpoint",
        "description": "Retorna informações básicas sobre o coletor",
        "responses": {
          "200": {
            "description": "Informações do coletor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "service": {"type": "string", "example": "pg-analytics-collector"},
                    "version": {"type": "string", "example": "1.0.0"},
                    "status": {"type": "string", "example": "running"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Health check",
        "description": "Verificação de saúde do coletor e conexão com PostgreSQL",
        "responses": {
          "200": {
            "description": "Status de saúde do sistema",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {"type": "string", "example": "healthy"},
                    "timestamp": {"type": "integer", "example": 1693456789},
                    "database_connected": {"type": "boolean", "example": true},
                    "last_update": {"type": "integer", "example": 1693456789},
                    "data_age_seconds": {"type": "integer", "example": 0},
                    "version": {"type": "string", "example": "1.0"},
                    "type": {"type": "string", "example": "c-bypass"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/metrics": {
      "get": {
        "summary": "Prometheus metrics",
        "description": "Métricas no formato Prometheus para scraping",
        "responses": {
          "200": {
            "description": "Métricas em formato Prometheus",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "# HELP pganalytics_collector_info Information about the collector\n# TYPE pganalytics_collector_info gauge\npganalytics_collector_info{version=\"1.0\",type=\"c-bypass\"} 1"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HealthResponse": {
        "type": "object",
        "properties": {
          "status": {"type": "string"},
          "timestamp": {"type": "integer"},
          "database_connected": {"type": "boolean"},
          "last_update": {"type": "integer"},
          "data_age_seconds": {"type": "integer"},
          "version": {"type": "string"},
          "type": {"type": "string"}
        }
      }
    }
  }
}
