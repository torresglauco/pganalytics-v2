# üèÜ PG Analytics v2 - Configura√ß√£o Enterprise
# ============================================
# 
# üîí IMPORTANTE: 
# - Copie para .env e configure valores reais
# - NUNCA commite .env com credenciais
# - Use secrets manager em produ√ß√£o

# ================================
# üöÄ APLICA√á√ÉO
# ================================
APP_ENV=development
APP_NAME=pganalytics
APP_VERSION=2.0.0
APP_PORT=8080
APP_HOST=0.0.0.0
APP_DEBUG=true

# ================================
# üêò BANCO DE DADOS
# ================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pganalytics
DB_USER=pganalytics
DB_PASSWORD=strong_password_here_change_in_production
DB_SSLMODE=disable
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=30s

# ================================
# üîê AUTENTICA√á√ÉO JWT
# ================================
# CR√çTICO: Use chave forte em produ√ß√£o (32+ caracteres)
JWT_SECRET=your_super_secret_jwt_key_minimum_32_chars_change_in_production
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=168h
JWT_ISSUER=pganalytics
JWT_AUDIENCE=pganalytics-users

# ================================
# üìä MONITORAMENTO
# ================================
# Prometheus
PROMETHEUS_HOST=localhost
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=30d
PROMETHEUS_SCRAPE_INTERVAL=15s

# Grafana
GRAFANA_HOST=localhost
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=strong_grafana_password_change_me
GRAFANA_SECRET_KEY=change_me_random_string
GRAFANA_ALLOW_SIGN_UP=false

# OpenTelemetry
OTEL_COLLECTOR_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=pganalytics
OTEL_SERVICE_VERSION=2.0.0
OTEL_ENVIRONMENT=development
OTEL_RESOURCE_ATTRIBUTES=service.name=pganalytics,service.version=2.0.0

# ================================
# üìà COLETA DE M√âTRICAS
# ================================
METRICS_ENABLED=true
METRICS_INTERVAL=30s
METRICS_ENDPOINT=/metrics
COLLECTOR_PORT=8080
SLOW_QUERY_THRESHOLD=1000ms
COLLECT_SYSTEM_METRICS=true

# ================================
# üìù LOGS
# ================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_MAX_SIZE=100MB
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=30

# ================================
# üê≥ DOCKER
# ================================
COMPOSE_PROJECT_NAME=pganalytics
DOCKER_REGISTRY=your-registry.com
IMAGE_TAG=latest
DOCKER_BUILDKIT=1

# ================================
# üö® ALERTAS
# ================================
ALERTS_ENABLED=true
ALERT_WEBHOOK_URL=https://hooks.slack.com/your/webhook/url
ALERT_EMAIL_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=alerts@yourcompany.com
SMTP_PASSWORD=smtp_password_change_me
ALERT_EMAIL_FROM=pganalytics@yourcompany.com
ALERT_EMAIL_TO=admin@yourcompany.com

# ================================
# üîí SEGURAN√áA
# ================================
SECURITY_CORS_ORIGINS=http://localhost:3000,http://localhost:8080
SECURITY_CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
SECURITY_CORS_HEADERS=Content-Type,Authorization
SECURITY_RATE_LIMIT=100
SECURITY_RATE_WINDOW=1m
SECURITY_ENABLE_HTTPS=false
SECURITY_TLS_CERT_FILE=
SECURITY_TLS_KEY_FILE=

# ================================
# üöÄ PERFORMANCE
# ================================
PERFORMANCE_CACHE_ENABLED=true
PERFORMANCE_CACHE_TTL=300s
PERFORMANCE_POOL_SIZE=10
PERFORMANCE_TIMEOUT=30s
PERFORMANCE_MAX_REQUEST_SIZE=10MB

# ================================
# üõ†Ô∏è DESENVOLVIMENTO
# ================================
DEV_HOT_RELOAD=true
DEV_DEBUG_ENABLED=true
DEV_PROFILING_ENABLED=false
DEV_SWAGGER_ENABLED=true
DEV_MOCK_DATA=false
