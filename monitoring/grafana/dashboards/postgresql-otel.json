{
  "dashboard": {
    "id": null,
    "title": "PostgreSQL OpenTelemetry Metrics",
    "tags": ["postgresql", "opentelemetry"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Conex√µes Ativas",
        "type": "stat",
        "targets": [
          {
            "expr": "postgres_connections_total{state="active"}",
            "legendFormat": "Ativas"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Cache Hit Ratio",
        "type": "stat",
        "targets": [
          {
            "expr": "postgres_cache_hit_ratio",
            "legendFormat": "Hit Ratio"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Slow Queries/min",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(postgres_slow_queries_total[1m])",
            "legendFormat": "Queries/min"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Deadlocks",
        "type": "stat",
        "targets": [
          {
            "expr": "postgres_deadlocks_total",
            "legendFormat": "Total"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
