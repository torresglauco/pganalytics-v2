{
  "dashboard": {
    "title": "PostgreSQL Analytics - Enhanced Performance",
    "panels": [
      {
        "id": 10,
        "title": "Query Performance Metrics",
        "type": "timeseries",
        "targets": [
          {"expr": "pg_slow_queries", "legendFormat": "{{tenant}} Slow Queries"},
          {"expr": "pg_avg_query_time_ms", "legendFormat": "{{tenant}} Avg Time (ms)"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20}
      },
      {
        "id": 11,
        "title": "Lock Contention Analysis",
        "type": "timeseries", 
        "targets": [
          {"expr": "pg_total_locks", "legendFormat": "{{tenant}} Total Locks"},
          {"expr": "pg_waiting_locks", "legendFormat": "{{tenant}} Waiting Locks"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20}
      },
      {
        "id": 12,
        "title": "Replication Health",
        "type": "stat",
        "targets": [
          {"expr": "pg_is_standby", "legendFormat": "{{tenant}} Is Standby"},
          {"expr": "pg_active_replication_slots", "legendFormat": "{{tenant}} Active Slots"}
        ],
        "gridPos": {"h": 4, "w": 8, "x": 0, "y": 28}
      },
      {
        "id": 13,
        "title": "Cache Performance",
        "type": "gauge",
        "targets": [
          {"expr": "pg_cache_hit_ratio", "legendFormat": "{{tenant}} Cache Hit %"}
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 90},
                {"color": "green", "value": 95}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 8, "x": 8, "y": 28}
      },
      {
        "id": 14,
        "title": "Database Growth Rate",
        "type": "timeseries",
        "targets": [
          {"expr": "rate(pg_database_size_bytes[1h])", "legendFormat": "{{tenant}} Growth Rate"}
        ],
        "fieldConfig": {"defaults": {"unit": "bytes"}},
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32}
      },
      {
        "id": 15,
        "title": "Maintenance Status",
        "type": "stat",
        "targets": [
          {"expr": "pg_tables_need_vacuum", "legendFormat": "{{tenant}} Tables Need Vacuum"}
        ],
        "gridPos": {"h": 4, "w": 8, "x": 16, "y": 28}
      }
    ]
  }
}